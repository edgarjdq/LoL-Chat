<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:background="#000000">
    <FrameLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/frameLayout1">
        <ImageView android:id="@+id/loginanim_bg" android:src="@drawable/loading_bg" android:layout_height="wrap_content" android:layout_width="wrap_content" android:scaleType="fitStart" android:layout_gravity="top|center_horizontal"></ImageView>
        <ImageView android:id="@+id/loginanim_logo_anim" android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/loading" android:layout_marginTop="118dip" android:layout_gravity="center_horizontal"></ImageView>
        <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_gravity="bottom" android:layout_height="wrap_content">
            <TextView android:textColor="@color/vert_manu" android:gravity="center" android:id="@+id/loginanim_status_text" android:layout_height="wrap_content" android:textSize="20sp" android:layout_width="fill_parent"></TextView>
            <Button android:text="@string/CancelButton" android:id="@+id/loginanim_cancel_button" android:layout_gravity="bottom" android:layout_height="wrap_content" android:layout_width="fill_parent"></Button>
        </LinearLayout> 
    </FrameLayout>
</LinearLayout>

